<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueGrayPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/row_item_guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_arrow_drop_down_circle_black_24dp"
        android:scaleType="fitCenter"
        android:padding="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/row_item_guide1"
        app:layout_constraintTop_toTopOf="@id/spinner_row_textview_freak"
        app:layout_constraintBottom_toBottomOf="@id/spinner_row_textview_freak"
        />

    <TextView
        android:id="@+id/spinner_row_textview_freak"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textColor="@color/colorBlueGrayLight"
        android:textStyle="bold"
        android:gravity="left|center"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="@id/row_item_guide1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</android.support.constraint.ConstraintLayout>