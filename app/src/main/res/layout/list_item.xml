<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:id="@+id/list_item_gradient_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/list_item__guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/list_item__guide_horiz1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/list_item__guide_horiz2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/list_item_gradient_idnumber"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient4"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/list_item__guide1"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/list_item_textView_idnumber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="000"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/list_item__guide_horiz1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/list_item__guide1"
        app:layout_constraintBottom_toBottomOf="@id/list_item__guide_horiz2"
        />



    <TextView
        android:id="@+id/list_item_gradient_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/back_gradient_whore1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_item__guide1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/list_item_color_description_top"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@color/color_pink1"
        android:alpha="0.4"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_item__guide1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/list_item_textView_description_header"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_item__guide1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/list_item_textView_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/list_item_textView_description_header"
        app:layout_constraintStart_toStartOf="@+id/list_item__guide1"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>