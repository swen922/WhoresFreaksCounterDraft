<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/dude_create_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/land_dude_create_background_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/land_background_fragment_left_whore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/land_dude_create_guide_vertical_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"
        />


    <TextView
        android:id="@+id/dude_create_prompt_info"
        android:text="@string/info_prompt"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.3"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/dude_create_edittext_info"
        android:imeOptions = "flagNoFullscreen"
        android:textCursorDrawable="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textCapSentences|textMultiLine"
        android:layout_marginBottom="8dp"
        android:gravity="top"
        android:paddingLeft="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintHeight_min="320dp"
        app:layout_constraintLeft_toLeftOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/dude_create_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dude_create_save_button"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/dude_create_save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toRightOf="@id/dude_create_cancel_button"
        app:layout_constraintRight_toRightOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/dude_create_color_header"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorOrangeDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintTop_toBottomOf="@id/dude_create_cancel_button"

        />

    <TextView
        android:id="@+id/dude_create_textview_header"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintTop_toTopOf="@id/dude_create_color_header"
        />

    <TextView
        android:id="@+id/dude_create_spinner_prompt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/spinner_prompt"
        android:layout_marginTop="12dp"
        android:paddingLeft="12dp"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintTop_toBottomOf="@id/dude_create_color_header"
        />

    <Spinner
        android:id="@+id/dude_create_spinner_property"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/land_background_spinner_item_whore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_create_guide_vertical_45"
        app:layout_constraintTop_toBottomOf="@id/dude_create_spinner_prompt"
        />



</android.support.constraint.ConstraintLayout>