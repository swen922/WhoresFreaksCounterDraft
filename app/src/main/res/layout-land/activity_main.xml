<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_gradient"
    android:padding="16dp"
    tools:context=".MainActivity">


    <android.support.constraint.Guideline
        android:id="@+id/main_vertical_guide48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.48"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_vertical_guide52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.52"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_vertical_guide19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.19"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_vertical_guide25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8"
        />


    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        />

    <android.support.constraint.Guideline
        android:id="@+id/main_horizontal_guide95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />

    <TextView
        android:id="@+id/textview_counter_freaks_header"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/list_item_freak2"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="right"
        android:alpha="0.6"
        android:paddingBottom="8dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/main_vertical_guide19"

        />

    <TextView
        android:id="@+id/textview_counter_whores_header"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="@string/list_item_whore2"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="left"
        android:alpha="0.6"
        android:paddingBottom="8dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/main_vertical_guide25"
        app:layout_constraintRight_toRightOf="@id/main_vertical_guide48"

        />

    <TextView
        android:id="@+id/textview_counter_freaks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:gravity="top|right"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintVertical_weight="3"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/textview_counter_freaks_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/main_vertical_guide19"
        app:layout_constraintBottom_toBottomOf="@id/main_horizontal_guide60"
        />

    <TextView
        android:id="@+id/textview_counter_separator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:gravity="top|center"

        app:layout_constraintTop_toTopOf="@id/main_horizontal_guide10"
        app:layout_constraintLeft_toLeftOf="@id/main_vertical_guide19"
        app:layout_constraintRight_toRightOf="@id/main_vertical_guide25"
        app:layout_constraintBottom_toBottomOf="@id/main_horizontal_guide50"
        />

    <TextView
        android:id="@+id/textview_counter_whores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="top|left"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/textview_counter_whores_header"
        app:layout_constraintLeft_toLeftOf="@id/main_vertical_guide25"
        app:layout_constraintRight_toRightOf="@id/main_vertical_guide48"
        app:layout_constraintBottom_toBottomOf="@id/main_horizontal_guide60"

        />


    <TextView
        android:id="@+id/textview_add_freak"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/add_freak1"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="right"
        android:maxLines="2"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/main_vertical_guide19"
        app:layout_constraintBottom_toBottomOf="@id/main_horizontal_guide95"
        />


    <TextView
        android:id="@+id/textview_add_whore"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="left"
        android:text="@string/add_whore1"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:maxLines="2"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="@id/main_vertical_guide25"
        app:layout_constraintRight_toRightOf="@id/main_vertical_guide48"
        app:layout_constraintBottom_toBottomOf="@id/main_horizontal_guide95"

        />

    <ListView
        android:id="@+id/listview_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/main_vertical_guide52"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</android.support.constraint.ConstraintLayout>