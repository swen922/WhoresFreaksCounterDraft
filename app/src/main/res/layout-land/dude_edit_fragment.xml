<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/dude_fragment_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_fragment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/land_dude_fragment_background_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/land_background_fragment_left_whore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <android.support.constraint.Guideline
        android:id="@+id/land_dude_fragment_guide_vertical_45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.45"
        />

    <android.support.constraint.Guideline
        android:id="@+id/land_dude_fragment_guide_horizontal_95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"
        />


    <TextView
        android:id="@+id/dude_fragment_prompt_info"
        android:text="@string/info_prompt"
        android:textSize="20sp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.3"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/dude_fragment_edittext_info"
        android:imeOptions = "flagNoFullscreen"
        android:textCursorDrawable="@null"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textCapSentences|textMultiLine"
        android:layout_marginBottom="8dp"
        android:gravity="top"
        android:paddingLeft="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintHeight_min="320dp"
        app:layout_constraintLeft_toLeftOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/dude_fragment_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dude_fragment_save_button"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/dude_fragment_save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toRightOf="@id/dude_fragment_cancel_button"
        app:layout_constraintRight_toRightOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/dude_fragment_color_header"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/colorOrangeDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintTop_toBottomOf="@id/dude_fragment_cancel_button"

        />

    <TextView
        android:id="@+id/dude_fragment_textview_header"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimaryLight"
        android:textStyle="bold"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dude_fragment_textview_index"
        app:layout_constraintTop_toTopOf="@id/dude_fragment_color_header"
        />

    <TextView
        android:id="@+id/dude_fragment_textview_index"
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:background="@drawable/background_fragment_index"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintRight_toRightOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintTop_toTopOf="@id/dude_fragment_color_header"
        />

    <Spinner
        android:id="@+id/dude_fragment_spinner_property"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintTop_toBottomOf="@id/dude_fragment_color_header"
        />


    <TextView
        android:id="@+id/dude_fragment_date_textview"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintTop_toBottomOf="@id/dude_fragment_spinner_property"

        />


    <ImageView
        android:id="@+id/dude_fragment_icon_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_share_24dp_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dude_fragment_icon_delete"
        app:layout_constraintTop_toBottomOf="@id/dude_fragment_date_textview"
        />

    <ImageView
        android:id="@+id/dude_fragment_icon_delete"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_cancel_32dp_red"
        android:scaleType="centerCrop"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toRightOf="@id/dude_fragment_icon_share"
        app:layout_constraintRight_toRightOf="@id/land_dude_fragment_guide_vertical_45"
        app:layout_constraintTop_toTopOf="@id/dude_fragment_icon_share"
        app:layout_constraintBottom_toBottomOf="@id/dude_fragment_icon_share"
        />

</android.support.constraint.ConstraintLayout>